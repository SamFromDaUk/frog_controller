<form class="form-horizontal" role="form">
    <% for (var i = 0; i < deployments.length; i++) { %>
        <div class="input-group deployment">
            <input class="form-control" disabled="disabled" type="text" value="<%= deployments[i].getUrl('upgrade') %>" />
            <span class="input-group-btn">
                <button class="btn btn-primary"><%= deployments[i].deploymentName %></button>
            </span>
        </div>
    <% } %>
</form>
